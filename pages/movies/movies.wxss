@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid.wxss";

.movies {
  background-color: #F2F2F2;
}

.movies-template {
  margin-bottom: 30rpx;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.xx-img {
  margin-right: 10px;
}

.cancel-block {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}